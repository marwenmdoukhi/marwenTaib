<a{% for attr, value  in options | merge({class: 'btn btn-outline-dark btn-ellipse btn-md'}) %} {{ attr }}="{{ value }}"{% endfor %}>
<span class="float-right">
        {% if sorted %}
            {% if  direction  ==  'desc' %}
                <i class="fas fa-sort-amount-down ml-4"></i>
            {% else %}
                <i class="fas fa-sort-amount-up ml-4 "></i>
            {% endif %}
        {% else %}
            <i class="fas fa-sort  ml-4"></i>
        {% endif %}
    </span>
{{ title }}
</a>

