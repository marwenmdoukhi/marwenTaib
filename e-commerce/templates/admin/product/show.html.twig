
{% extends 'admin.html.twig' %}
{% block body %}
    <link href="{{ asset('backadmin/assets/css/scrollspyNav.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('backadmin/assets/css/components/custom-carousel.css') }}" rel="stylesheet" type="text/css" />
    <div class="sub-header-container">
        <header class="header navbar navbar-expand-sm">
            <nav class="breadcrumb-two" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('product_index') }}" >Produit</a>
                    </li>
                    <li class="breadcrumb-item active ml-2"><a href="javascript:void(0);">{{ product.name }}</a></li>
                </ol>
            </nav>

        </header>
    </div>
<div class="jumbotron">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                {% if product.filename %}
                    <img src="{{ vich_uploader_asset(product, 'imageFile')  }}"
                         class="card-img-top"
                         style="width: 100%; height: auto">
                {% else %}
                    <img src="{{ vich_uploader_asset(product, 'imageFile')   }}"
                         class="card-img-top"
                         style="width: 100%; height: auto">
                {% endif %}

            </div>
            <div class="col-md-4">
                <h1> {{ product.name }}</h1>
                <div class="text-primary" style="font-size: 4rem; font-weight: bold;">
                    {{ product.newprice  }} DT
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container mt-4">

    <div class="row">
        <div class="col-md-12">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img height="300" class="d-block w-100" src="{{ vich_uploader_asset(product, 'imageFile')  }}" alt="First slide">
                    </div>
                    {% for imagemultiple in product.images %}
                    <div class="carousel-item">
                        <img  height="300"  class="d-block w-100" src="{{ absolute_url(asset('/uploads/produitmultiples/'~imagemultiple.name)) }}"  alt="{{ imagemultiple.name }}">
                    </div>
                    {% endfor %}

                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>

    <h2>Description</h2>
    <p>
        {{ product.description|raw }}
    </p>

    <p>
        {{ product.easeOfPayment|raw }}
    </p>

    <div class="row">
        <div class="col-md-8">
            <h2>Details</h2>
            <table class="table table-striped">
                <tr>
                    <td>Référence</td>
                    <td>{{ product.refrence }}</td>
                </tr>
                <tr>
                    <td>Prix</td>
                    <td>{{ product.price }}</td>
                </tr>
                <tr>
                    <td>Promo</td>
                    <td>{{ product.promo ? 'oui' : 'Non' }}</td>
                </tr>
                <tr>
                    <td>Reduction</td>
                    <td>{{ product.pricePromo }} % </td>
                </tr>
                <tr>
                    <td>marque</td>
                    <td>{{ product.marque.name }}  </td>
                </tr>
                <tr>
                    <td>Categories</td>
                    <td>
                        {% for categorie in product.categories %}

                            {{ categorie.name }}
                        {% endfor %}
                    </td>
                </tr>

            </table>

        </div>

    </div>
</div>

{% endblock %}


