{% extends 'base.html.twig' %}
{% block title %}
    {% if app.request.pathInfo == "/horlogerie/montres-pour-hommes" %}
    Montres Pour Hommes
    {% elseif app.request.pathInfo == "/horlogerie/montres-pour-femmes" %}
        Montres Pour Femmes
    {% elseif app.request.pathInfo == "/horlogerie/montres-pour-enfants" %}
        Montres Pour Enfatns
    {% else %}
        Smartwatches
    {% endif %}
{% endblock %}
{% block body %}
    <div class="page-wrapper">
        <main class="main banners-page">
        </main>
    </div>
    <main class="main mt-10 pt-5 ">
        <nav aria-label="breadcrumb" class="breadcrumb-nav pt-5">
            <div class="container">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('home') }}"><i class="icon-home"></i></a></li>
                    <li class="breadcrumb-item"><a href="{{ path('Boutique',{"slug":'horlogerie'}) }}">Horlogerie</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                        {% if app.request.pathInfo == "/horlogerie/montres-pour-hommes" %}
                            Montres Pour Hommes
                        {% elseif app.request.pathInfo == "/horlogerie/montres-pour-femmes" %}
                            Montres Pour Femmes
                        {% elseif app.request.pathInfo == "/horlogerie/montres-pour-enfants" %}
                            Montres Pour Enfatns
                        {% else %}
                           Smartwatches
                        {% endif %}
                    </li>
                </ol>
            </div>
        </nav>
        <div class="container mb-3">
            <div class="row">
                <div class="col-lg-9 main-content">
                    <div class="category-banner pt-0 pb-2  mt-xl-5 mt-9 mb-10">
                        <div class="category-slide-content pt-1">
                            {% if app.request.pathInfo == "/horlogerie/montres-pour-hommes" %}
                                <h1 class="m-b-3 d-none d-sm-block text-uppercase">Vente Montres Pour Hommes</h1>
                                <h2 class="ml-0 d-none d-sm-block">Chez fashion for men and women</h2>
                                <h1 style="font-size: 22px;" class="m-b-3 d-block d-sm-none text-uppercase text-center">Vente Montres Pour Hommes</h1>
                                <h2  style="font-size: 22px;"  class="ml-0 d-block d-sm-none  text-center">Chez fashion for men and women</h2>
                            {% elseif app.request.pathInfo == "/horlogerie/montres-pour-femmes" %}
                                <h1 class="m-b-3 d-none d-sm-block text-uppercase">Vente Montres Pour Femmes</h1>
                                <h2 class="ml-0 d-none d-sm-block">Chez fashion for men and women</h2>
                                <h1 style="font-size: 22px;" class="m-b-3 d-block d-sm-none text-uppercase text-center">Vente Montres Pour Femmes</h1>
                                <h2  style="font-size: 22px;"  class="ml-0 d-block d-sm-none  text-center">Chez fashion for men and women</h2>
                            {% elseif app.request.pathInfo == "/horlogerie/montres-pour-enfants" %}
                                <h1 class="m-b-3 d-none d-sm-block text-uppercase">Vente Montres Pour Enfants</h1>
                                <h2 class="ml-0 d-none d-sm-block">Chez fashion for men and women</h2>
                                <h1 style="font-size: 22px;" class="m-b-3 d-block d-sm-none text-uppercase text-center">Vente Montres Pour Enfants</h1>
                                <h2  style="font-size: 22px;"  class="ml-0 d-block d-sm-none  text-center">Chez fashion for men and women</h2>
                            {% else %}
                                <h1 class="m-b-3 d-none d-sm-block text-uppercase">Vente Smartwatches</h1>
                                <h2 class="ml-0 d-none d-sm-block">Chez fashion for men and women</h2>
                                <h1 style="font-size: 22px;" class="m-b-3 d-block d-sm-none text-uppercase  text-center">Vente Smartwatches</h1>
                                <h2  style="font-size: 22px;"  class="ml-0 d-block d-sm-none  text-center">Chez fashion for men and women</h2>
                            {% endif %}
                        </div>
                    </div>
                    <nav class="toolbox sticky-header" data-sticky-options="{'mobile': true}">
                        <div class="toolbox-left">
                            <a href="#" class="sidebar-toggle">
                                <svg data-name="Layer 3" id="Layer_3" viewBox="0 0 32 32"
                                     xmlns="http://www.w3.org/2000/svg">
                                    <line x1="15" x2="26" y1="9" y2="9" class="cls-1"></line>
                                    <line x1="6" x2="9" y1="9" y2="9" class="cls-1"></line>
                                    <line x1="23" x2="26" y1="16" y2="16" class="cls-1"></line>
                                    <line x1="6" x2="17" y1="16" y2="16" class="cls-1"></line>
                                    <line x1="17" x2="26" y1="23" y2="23" class="cls-1"></line>
                                    <line x1="6" x2="11" y1="23" y2="23" class="cls-1"></line>
                                    <path
                                            d="M14.5,8.92A2.6,2.6,0,0,1,12,11.5,2.6,2.6,0,0,1,9.5,8.92a2.5,2.5,0,0,1,5,0Z"
                                            class="cls-2"></path>
                                    <path d="M22.5,15.92a2.5,2.5,0,1,1-5,0,2.5,2.5,0,0,1,5,0Z" class="cls-2"></path>
                                    <path d="M21,16a1,1,0,1,1-2,0,1,1,0,0,1,2,0Z" class="cls-3"></path>
                                    <path
                                            d="M16.5,22.92A2.6,2.6,0,0,1,14,25.5a2.6,2.6,0,0,1-2.5-2.58,2.5,2.5,0,0,1,5,0Z"
                                            class="cls-2"></path>
                                </svg>
                                <span>Filter</span>
                            </a>
                        </div>
                        <div class="toolbox-right">
                            <div class="toolbox-item layout-modes">
                                <label>Sort By:</label>
                                <div>
                                    {{ knp_pagination_sortable(products, 'Prix', 'p.newprice', {}, {}, 'base/twitter_bootstrap_v3_sortable_link.html.twig') }}
                                    {{ knp_pagination_sortable(products, 'promo', 'p.promo', {}, {}, 'base/twitter_bootstrap_v3_sortable_link.html.twig') }}
                                </div>
                            </div>
                        </div>
                    </nav>
                    <div class="row">
                        {% for product in products %}
                            <div class="col-6 col-sm-4 col-md-3 col-xl-5col">
                                <div class="product-default inner-quickview inner-icon">
                                    <figure>
                                        <a  href="{{ path('product',{'slug': product.slug,'category':product.categories.slug,'id':product.id}) }}"
                                           class="viewModel">
                                            <img src="{{ vich_uploader_asset(product, 'imageFile') |imagine_filter('detail') }}"
                                                 width="273" height="273" alt="{{ product.name }}"/>
                                        </a>
                                        <div class="label-group">
                                            {% if product.promo ==true %}
                                                <div class="product-label label-sale">
                                                    {{ product.pricePromo }}%
                                                </div>
                                            {% endif %}
                                        </div>
                                        <div class="btn-icon-group">
                                            {% if product.activer == true %}
                                                <a href="{{ path('cart_add',{'id':product.id}) }}"  data-id="{{ product.id }}" class="btn-icon btn-add-cart product-type-simple ajouter">
                                                    <i class="icon-shopping-cart"></i>
                                                </a>
                                            {% endif %}
                                        </div>
                                        <a  href="{{ path('product',{'slug': product.slug,'category':product.categories.slug,'id':product.id}) }}"
                                           class="btn-quickview viewModel" title="Voir l'article">Voir l'article</a>
                                    </figure>
                                    <div class="product-details">
                                        <div class="category-wrap">
                                            <div class="category-list">
                                                <a  href="{{ path('product',{'slug': product.slug,'category':product.categories.slug,'id':product.id}) }}"
                                                   class="product-category viewModel">
                                                    {% if product.refrence != null %}
                                                        RÃ©ference : <b>{{ product.refrence }}</b>
                                                    {% endif %}
                                                </a>
                                            </div>
                                        </div>
                                        <h3 class="product-title">
                                            <a class="viewModel"
                                               href="{{ path('product',{'slug': product.slug,'category':product.categories.slug,'id':product.id}) }}"> {{ product.name }}</a>
                                        </h3>
                                        <div class="price-box">
                                            {% if product.promo ==true %}
                                                <span class="old-price">{{ product.price |number_format(3, '.', ',') }} DT</span>
                                                <span class="product-price">{{ product.newprice |number_format(3, '.', ',') }} DT</span>
                                            {% else %}
                                                <span class="product-price">{{ product.newprice |number_format(3, '.', ',') }} DT</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>

                    <nav class="toolbox toolbox-pagination">
                        <div class="toolbox-item toolbox-show">
                        </div>
                        <ul class="pagination toolbox-item">
                            {{ knp_pagination_render(products,'base/pagination.html.twig') }}
                        </ul>
                    </nav>
                </div>

                <div class="sidebar-overlay"></div>

                <aside class="sidebar-shop col-lg-3 order-lg-first mobile-sidebar">
                    {% include  "client/subBoutique/subHorlogrie/_filtre.html.twig" with {form:form,min:min,max:max} only %}
                </aside>
            </div>
        </div>
    </main>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('front/nouislider.min.js') }}"></script>
    {{ parent() }}
{% endblock %}