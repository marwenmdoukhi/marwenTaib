{% extends 'base.html.twig' %}
{% block title %}Order :{{ order.numero }}!{% endblock %}
{% block body %}
    <div class="page-wrapper">
        <main class="main banners-page">
        </main>
    </div>
    <div class="page-wrapper">
        <main class="main banners-page">
            <div class=" show-nav-hover slide-animate">
                <div class="banner banner1">
                    <figure>
                        <img width="1500" height="580"
                             src="{{ asset('image/banner/bannerpannier.jpg') }}"
                             style="background:#d8dce5;min-height:36rem;" alt="boutique Fashion for men and women"/>
                    </figure>
                    <div class="container align-items-center d-flex">
                        <div class="banner-layer text-center">
                            <h4 class="banner-subtitle appear-animate text-black" data-animation-name="fadeInUpShorter"
                                data-animation-delay="200">Votre Pannier</h4>
                            <h2 style="font-size:2.5em !important;" class="banner-title appear-animate"
                                data-animation-name="fadeInUpShorter"
                                data-animation-delay="400">
                                {% if app.user %}
                                    {{ app.user.firstName }} {{ app.user.lastName }}
                                {% endif %}</h2>
                        </div>
                    </div>
                </div>

            </div>
        </main>
    </div>
    <div role="main" class="main shop pb-4">
        <div class="container ">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <ul class="checkout-progress-bar d-flex justify-content-center flex-wrap">
                        <li>
                            <a style="color:#999!important;" href="{{ path('cart_index') }}">Carte des Produits</a>
                        </li>
                        <li class="active">
                            <a style="color:#000000!important;" href="#">Confirmation</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card border-width-3 border-radius-0 border-color-success">
                        <div class="card-body text-center">
                            <p class="text-dark font-weight-bold text-4-5 mb-0"><i
                                        class="fas fa-check text-success mr-1"></i> Merci. Votre commande a été reçue.
                            </p>
                            <p class="mt-2">tnajm tab3 commande mt3ék mel profil inzel hné <a href="{{ path('mescommande') }}">ici</a></p>
                        </div>
                    </div>
                    <div class="d-flex flex-column flex-md-row justify-content-between py-3 px-4 my-4">
                        <div class="text-center">
                            <span>
                                Numéro de commande<br>
                                <strong class="text-dark">{{ order.numero }}</strong>
                            </span>
                        </div>
                        <div class="text-center mt-4 mt-md-0">
                            <span>
                                Date <br>
                                <strong class="text-dark">{{ order.CreatedAt|format_datetime(locale='fr') }}</strong>
                            </span>
                        </div>
                        <div class="text-center mt-4 mt-md-0">
                            <span>
                                Email <br>
                                <strong class="text-dark">{{ order.users.email }}</strong>
                            </span>
                        </div>
                        <div class="text-center mt-4 mt-md-0">
                            <span>
                                Total <br>
                                <strong class="text-dark">{{ order.Montant |number_format(3, '.', ',') }} TND</strong>
                            </span>
                        </div>
                        <div class="text-center mt-4 mt-md-0">
                            <span>
                               Mode de paiement<br>
                                <strong class="text-dark">Paiement à la livraison</strong>
                            </span>
                        </div>
                    </div>

                    <div class="card border-width-3 border-radius-0 border-color-hover-dark ">
                        <div class="card-body">
                            <h4 class="font-weight-bold  text-dark text-uppercase text-4">Votre commande</h4>
                            <table class="shop_table cart-totals mb-0">
                                <tbody>
                                {% for detailcommande in detailcommande %}
                                    <tr>
                                        <td style="width: 80%">
                                            <strong class="d-block text-dark line-height-1 font-weight-semibold">{{ detailcommande.Product.name }}
                                                <span class="product-qty">x{{ detailcommande.Quantite }}</span></strong>
                                            <span class="text-1">{{ detailcommande.Product.refrence }}</span>
                                        </td>
                                        <td class="text-end align-top">
                                            <span class="amount font-weight-medium text-grey">{{ detailcommande.Product.newprice |number_format(3, '.', ',') }} DT</span>
                                        </td>
                                    </tr>
                                {% endfor %}
                                <br>

                                <tr class="cart-subtotal">
                                    <td class="border-top-0">
                                        <strong class="text-dark">Total</strong>
                                    </td>
                                    <td class="border-top-0 text-end">
                                        <strong>
                                            <span class="amount font-weight-medium">{{ order.montant  |number_format(3, '.', ',') }} DT</span>
                                        </strong>
                                    </td>
                                </tr>
                                <tr class="shipping">
                                    <td class="border-top-0">
                                        <strong class="text-dark">Livraison</strong>
                                    </td>
                                    <td class="border-top-0 text-end">
                                        <strong><span class="amount font-weight-medium">Gratuite</span></strong>
                                    </td>
                                </tr>
                                <tr class="total">
                                    <td>
                                        <strong class="text-color-dark text-3-5">Total</strong>
                                    </td>
                                    <td class="text-end">
                                        <strong class="text-dark"><span
                                                    class="amount text-dark text-5">{{ order.montant  |number_format(3, '.', ',') }} DT</span></strong>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

